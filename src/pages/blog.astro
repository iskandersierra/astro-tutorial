---
import BlogPost from '../components/blog/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "My Astro Learning Blog";

function dateComparer<T>(dateExtractor: (t: T) => Date) {
    return (a: T, b: T) => Date.parse(dateExtractor(a).toString()) - Date.parse(dateExtractor(b).toString());
}

interface Frontmatter {
    title: string;
    pubDate: Date;
}

const allPosts = await Astro.glob<Frontmatter>('./posts/*.md');

const sortedPosts = allPosts
    .sort(dateComparer((post => post.frontmatter.pubDate)))
    .reverse();
---

<BaseLayout pageTitle={pageTitle}>
    <p>This is where I will post about my journey learning Astro.</p>
    <ul>
        {sortedPosts.map((post) => (
            <li>
                <BlogPost title={post.frontmatter.title} url={post.url} />
            </li>
        ))}
    </ul>
</BaseLayout>
